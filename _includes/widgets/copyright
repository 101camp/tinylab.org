<script>
jQuery(document).ready(function(){
  var author_box = $('#author-box-wrap');
  $("#author-footer").click(function(e){
         var status = author_box.css('display');
         if (status == "none") {
             author_box.show();
         } else {
             author_box.hide();
         }
  });
});
</script>
